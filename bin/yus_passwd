#!/usr/bin/env ruby

$: << File.expand_path('../lib', File.dirname(__FILE__))

require 'rubygems' if RUBY_VERSION.match('1.8.6')
require 'drb'
require 'drb/ssl'
require 'password'
require 'rclconf'
require 'yus/session'
require 'yus/helpers'
require 'getoptlong'

opts = YUS.default_opts
name = ARGV.first

unless(name)
	puts <<-EOS
Usage: yus_passwd <username>
	EOS
  exit
end

session = YUS.session(opts)

pass1 = YUS.password("New Password for #{name}: ")
pass2 = YUS.password("Repeat Password for #{name}: ")

if(pass1 != pass2)
  puts "Passwords did not match"
  cont.call
end

session.set_password(name, pass1.to_s)
